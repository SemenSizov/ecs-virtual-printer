{
  "name": "ecs-virtual-printer",
  "productName": "ECS Virtual Printer",
  "version": "1.0.0",
  "description": "Fake printer with logs and SNMP/TCP emulation",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "author": "Sam Syzov",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^38.2.0",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.ecs.virtualprinter",
    "productName": "ECS Virtual Printer",
    "directories": {
      "output": "inst"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "signAndEditExecutable": false
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  }
}